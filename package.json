    "build:next": "pnpm --prefix ./packages/next run build"
  },
  "devDependencies": {
    "@shun-shobon/eslint-config-base": "workspace:*",
    "@tsconfig/node-lts": "^18.12.3",
    "@tsconfig/strictest": "^2.0.1",
    "eslint": "^8.44.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1"
  }
}
